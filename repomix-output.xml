import E2B from '@e2b/sdk'

export async function runInSandbox(code: string) {
  const sandbox = await E2B.Sandbox.create({ template: 'python3' })
  const { stdout, stderr } = await sandbox.runCode(code)
  await sandbox.close()
  return { stdout, stderr }
}
